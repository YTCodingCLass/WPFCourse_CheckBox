<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="450">
	<StackPanel Orientation="Vertical" Margin="5">
		<StackPanel Orientation="Horizontal" Margin="10">
			<Label Content="First Name:" Margin="0 0 20 0"/>
			<TextBox Width="300"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Margin="10">
			<Label Content="Last Name:" Margin="0 0 20 0"/>
			<TextBox Width="300"/>
		</StackPanel>
		<CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" x:Name="cb_License_1" Content="I accept license 1" Margin="10"/>
		<CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" x:Name="cb_License_2" Content="I accept license 2" Margin="10"/>
		<Button x:Name="btn_Register" IsEnabled="False" Height="25" Content="Register"></Button>
	</StackPanel>
</Window>
